page {
  height: 100%;
}

.content {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}

.main-bg {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.screen-container {
  padding-top: 30rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
}

.screen {
  background-color: #fff;
  border-radius: 3px;
  text-align: right;
  font-size: 300%;
  width: 720rpx;
  height: 180rpx;
  line-height: 150rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
}

.btnGroup {
  display: flex;
  flex-direction: row;
}

.item {
  width: 160rpx;
  min-height: 10rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  border-radius: 5px;
  text-align: center;
  line-height: 120rpx;
  display: inline-block;
}

.orange {
  color: #fef4e9;
  border: solid 1px #da7c0c;
  font-size: 130%;
  background: #f78d1d;
}

.white {
  border: solid 1px #0076a3;
  background-color: white;
  font-size: 125%;
}
.coral {
  border: solid 1px coral;
  background-color: coral;
  font-size: 125%;
}

